    = form_for(ChopServation.new) do |f|
      = hidden_field_tag :sighted
      = hidden_field_tag :latitude
      = hidden_field_tag :longitude

      = f.submit "Yes", :id => "yes_chopper"
      = f.submit "No", :id => "no_chopper"
